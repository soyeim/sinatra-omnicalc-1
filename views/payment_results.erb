<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= params.fetch("user_apr").to_f.to_fs(:percentage, { :precision => 4 }) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @yr %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @pv.to_fs(:currency, { :precision => 2 }) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @result.to_fs(:currency, { :precision => 2 }) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
